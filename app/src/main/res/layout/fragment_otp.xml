<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    tools:context="itg8.com.serviceapp.login.OTPFragment">

    <TextView
        android:id="@+id/lbl_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OTP"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="?attr/actionBarSize"
        android:textStyle="bold"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:id="@+id/ll_otp"
        android:layout_below="@+id/lbl_otp"
        android:weightSum="4">


        <EditText
            android:id="@+id/edt_otp_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:hint="1"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/text_font" />
        <EditText
            android:id="@+id/edt_otp_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:hint="2"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/text_font" />
        <EditText
            android:id="@+id/edt_otp_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:hint="3"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/text_font" />
        <EditText
            android:id="@+id/edt_otp_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:hint="4"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/text_font" />
    </LinearLayout>




</RelativeLayout>

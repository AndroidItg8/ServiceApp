<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ll_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Apps Name:"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/ll_app_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/ll_app_name"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:text="ABC"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/ll_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:text="Company Name:"
            android:visibility="gone"
            android:layout_below="@+id/ll_app_name"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/ll_company_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/ll_company_name"
            android:text="Itech Galaxy"
            android:visibility="gone"

            android:layout_below="@+id/ll_app_name"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/img_download"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_download_btn"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Download App"/>

        <TextView
            android:id="@+id/lbl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:layout_below="@+id/ll_company_name"
            android:lines="3"
            android:maxLines="3"
            android:text="This is short description of App .This is short description of App .This is short description of App .This is short description of App . ."
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:textStyle="normal" />



    </RelativeLayout>


</android.support.v7.widget.CardView>
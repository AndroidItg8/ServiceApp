                <TextView
                    android:id="@+id/lbl_invoiceNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="20dp"
                    android:text="Invoice Number"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/lbl_problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lbl_remain_days_value"
                    android:layout_below="@+id/lbl_invoiceNumber"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="3"
                    android:maxLines="3"
                    android:text="This is short description of product problem"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/lbl_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lbl_status_value"
                    android:layout_below="@+id/lbl_problem"
                    android:layout_marginEnd="5dp"

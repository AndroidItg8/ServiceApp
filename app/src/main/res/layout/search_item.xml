<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp">

    <ImageView
        android:id="@+id/imageView_item_icon_left"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="08dp"
        android:contentDescription="SearchView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toEndOf="@+id/imageView_item_icon_left"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:gravity="start"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
         android:layout_margin="08dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/textView_brand_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:gravity="start"
        android:textIsSelectable="false"
        android:textColor="@color/colorBlack"

        android:layout_margin="08dp"

        android:textSize="14sp"
        android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <!--<ImageView-->
    <!--android:id="@+id/imageView_item_icon_right"-->
    <!--android:layout_width="@dimen/search_icon"-->
    <!--android:layout_height="@dimen/search_icon"-->
    <!--android:contentDescription="@string/search_app_name" />-->

</RelativeLayout>
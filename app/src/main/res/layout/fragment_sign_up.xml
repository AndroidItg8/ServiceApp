<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:fillViewport="true"
    tools:context="itg8.com.eprocurementsystem.login.SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SignUp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="85dp"
        android:textStyle="bold"
        android:textSize="20sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorBlack"
        android:layout_below="@+id/lbl_SignUp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:inputType="text"
            android:textColorHint="@color/colorBlack"
            android:hint="Enter Name" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorBlack"
        android:layout_below="@+id/input_layout_name"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:inputType="textEmailAddress"

            android:textColorHint="@color/colorBlack"
            android:hint="Enter Email" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_company"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorBlack"
        android:layout_below="@+id/input_layout_email"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:inputType="text"

            android:textColorHint="@color/colorBlack"
            android:hint="Enter Company Name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorBlack"
        android:layout_below="@+id/input_layout_company"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:hint="Enter Passwoed" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_RePassword"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorBlack"
        android:layout_below="@+id/input_layout_password"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/input_RePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:inputType="textPassword"
            android:textColorHint="@color/colorBlack"
            android:hint="Reenter  Password" />

    </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</ScrollView>

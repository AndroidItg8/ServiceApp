<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2.5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="Invoice Date"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/lbl_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/colorBlack"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/colorGray" />

                    <TextView
                        android:id="@+id/lbl_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="7-2017"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorGray" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_invoiceNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="05dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:text="Invoice Number"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/lbl_remain_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/lbl_remain_days_value"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="05dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/lbl_invoiceNumber"
                        android:text="Remaining Days"
                        android:textColor="@color/colorGray"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/lbl_remain_days_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="05dp"
                        android:layout_marginStart="05dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/lbl_invoiceNumber"
                        android:layout_toEndOf="@+id/lbl_remain_days"
                        android:text="10"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/lbl_months"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/lbl_remain_days_value"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@+id/lbl_remain_days_value"
                        android:gravity="center"
                        android:text="Days"

                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/lbl_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/lbl_months"
                        android:layout_marginStart="05dp"
                        android:gravity="center"
                        android:text="Status"
                        android:textColor="@color/colorGray"
                        android:textSize="12sp"
                        android:layout_alignBaseline="@+id/lbl_status_value"
                        android:textStyle="normal"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/lbl_status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/lbl_months"
                        android:layout_toEndOf="@+id/lbl_status"
                        android:layout_marginStart="05dp"
                        android:gravity="center"
                        android:text="Warranty"
                        android:textColor="@color/colorGreen"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/btn_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_img_button"
            android:minHeight="30dp"
            android:text="Invoice"
            android:textColor="@color/colorWhite" />

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:id="@+id/progressView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cpv_color="@color/colorPrimary"
                app:cpv_thickness="2dp"
                android:layout_gravity="center"
                app:cpv_indeterminate="true"
                app:cpv_animAutostart="true"/>

        </FrameLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>